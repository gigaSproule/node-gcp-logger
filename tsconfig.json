{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2020",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "rootDirs": ["src"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/__tests__/**", "dist"]
}
